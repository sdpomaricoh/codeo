{{!< default}}
<main role="main">
	{{> header }}
	{{#post}}
	<article class="singlePost {{post_class}}">
		{{#if feature_image}}
			<div class="postHeader" style="background-image: url('{{img_url feature_image}}')">
				<div class="postInfo">
					<div class="container">
						<div class="row">
							<div class="col-md-8 col-sm-8 col-xs-12">
								<div class="tags">
									{{tags separator=","}}
								</div>
								<h1>{{title}}</h1>
							</div>
							<div class="col-md-4 col-sm-4 postMetadata">
								<a href="javascript:void(0)" class="postMetaIcon" id="metadataIcon"><i class="ion-android-more-vertical"></i></a>
								<div class="postMetaContainer">
									<p>
										<span>
											publicado: <a href="{{url}}" class="date"><time datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS"}}">{{date published_at format="MMMM DD, YYYY"}}</time></a>
										</span>
										<span>
											{{tags prefix="en: "}}
										</span>
										<span>
											autor: {{author}} 
										</span>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
	  	{{/if}}
		<div class="container postContent">
			<div class="socialSharing">
				<span>Compartir</span>
				<a href="javascript:void(0)" class="facebook" data-href="{{url absolute='true'}}" id="facebookShare">	<i class="ion-social-facebook"></i>
				</a>
				<a href="javascript:void(0)" class="twitter" data-title="{{title}}" data-href="{{url absolute='true'}}" id="twitterShare">
					<i class="ion-social-twitter"></i>
				</a>
				<a href="javascript:void(0)" class="linkedin" data-href="{{url absolute='true'}}" id="linkedinShare">
					<i class="ion-social-linkedin"></i>
				</a>
				<a href="javascript:void(0)" class="whatsapp" data-title="{{title}}" data-href="{{url absolute='true'}}" id="whatsappShare">
					<i class="ion-social-whatsapp"></i>
				</a>
				<a href="javascript:void(0)" class="more" data-title="{{title}}" data-href="{{url absolute='true'}}" id="webShare">
					<i class="ion-plus-circled"></i>
				</a>
			</div>
			<div class="col-md-10 offset-md-1 col-sm-12 offset-sm-1" id="content">
				{{content}}
			</div>		
		</div>
	</article>
	{{> author}}
	<div class="container" id="comment-box">
		<div class="row">
			<div class="col-md-10 offset-md-1 col-ms-12">
				<div id="disqus_thread"></div>
			</div>
		</div>	
	</div>	
	<script>
		var disqus_config = function () {
            this.page.url = '{{url absolute="true"}}';
            this.page.identifier = 'codeo-{{comment_id}}';
        };
		(function() {
			var d = document, s = d.createElement('script');
			s.src = 'https://mycvresumen.disqus.com/embed.js';
			s.setAttribute('data-timestamp', +new Date());
			(d.head || d.body).appendChild(s);
		})();
	</script>
	{{/post}}
	{{> footer }}
</main>	